@model EletronicSystem.Business.ViewModels.ProdutoViewModel

@{
    ViewData["Tittle"] = "Lista de produtos";
}

<div class="navbar">
    <h1>Produtos no Carrinho</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Foto</th>
            <th>Descriçao</th>
            <th>Valor</th>
            <th>Categoria</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            <tr>
                @if (Model.Foto != null)
                {
                    var base64 = Convert.ToBase64String(Model.Foto);
                    var imgSrc = $"data:image/jpeg;base64,{base64}";
                    <td><img src="@imgSrc" alt="" width="100" height="100" /></td>
                }
                <td>Model.Descricao</td>
                <td>Model.Valor</td>
                <td>Model.Categoria</td>
                <td><a asp-action="Update" asp-route-id="Model.Id">Editar</a></td>
                <td><a asp-controller="Produto" asp-action="Delete" asp-route-id="@Model.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>



@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"]</div>
}

@if (TempData["Erros"] != null)
{
    <div class="alert alert-danger">@TempData["Erros"]</div>
}