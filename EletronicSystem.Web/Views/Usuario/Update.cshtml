@model EletronicSystem.Business.ViewModels.UsuarioViewModel
<h1>Criar novo Usuario</h1>


<div class="container">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data" asp-validation-summary="ModelOnly">
            <div>
                <label class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">CPF</label>
                <input asp-for="CPF" class="form-control form-control-sm">
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Email</label>
                <input asp-for="UserName " class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Data Nascimento</label>
                <input asp-for="DataNascimento" class="form-control">
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Endereco</label>
                <input asp-for="Endereco" class="form-control">
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <input type="type" hidden name="" value="" />
            <input asp-for="Id" class="form-control">
            <button type="Editar" class="btn-primary mt-2" asp-controller="Usuario" asp-action="Update">Enviar</button>
        </form>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">@TempData["Sucesso"]</div>
    }

    @if (TempData["Erros"] != null)
    {
        <div class="alert alert-danger">@TempData["Erros"]</div>
    }

</div>
